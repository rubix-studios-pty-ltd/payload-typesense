{
  "$schema": "https://swc.rs/schema.json",
  "sourceMaps": true,
  "exclude": [
    "node_modules",
    "payload",
    "/**/mocks",
    "/**/*.spec.ts",
    "/**/*.test.ts"
  ],
  "jsc": {
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "dts": true
    },
    "transform": {
      "react": {
        "runtime": "automatic",
        "pragmaFrag": "React.Fragment",
        "throwIfNamespace": true,
        "development": false,
        "useBuiltins": true
      }
    }
  },
  "module": {
    "type": "es6"
  }
}
